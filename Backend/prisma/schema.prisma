generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  hashedPassword String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  roles     Role[]

  auditLogs AuditLog[]
}


model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  permissions String[] 

  users       User[]
}


model AuditLog {
  id        String   @id @default(cuid())
  action    String   
  details   Json?    

  targetType String  
  targetId   String

  timestamp DateTime @default(now())

  actor     User     @relation(fields: [actorUserId], references: [id])
  actorUserId String
}